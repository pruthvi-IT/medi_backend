# .env.example - DO NOT store real secrets in repo
# Railway will provide DATABASE_URL automatically if you add the Postgres plugin.
DATABASE_URL=

# Storage provider: 's3' for production (AWS S3), 'minio' for local dev
STORAGE_PROVIDER=s3

# AWS S3 credentials (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1

# MinIO settings (dev only)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=audio-chunks

# Optional dev auth token (replace with real auth in production)
DEV_AUTH_TOKEN=testtoken

# Host/Port
HOST=0.0.0.0
PORT=8000
